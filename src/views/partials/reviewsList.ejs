<section class="reviews">
    <h2 class="title">
        Rese√±as del producto
    </h2>
    <div class="list-of-reviews">
        <% reviews.forEach(review => { %>                
            <div class="card-review">
                <header>
                    <div class="review-image">
                        <img src="<%=review.dataValues.customer.customer_profile_image%>" alt="profile-picture">
                     </div>
                 
                    <div class="name-date-stars">
                        <p class="user-name"><%=review.dataValues.customer.dataValues.full_name%></p>
                        <p class="date-of-review"></p>
                        <div class="stars-review-one-user">
                            <% for (var i=1; i <= review.dataValues.score; i++){ %>
                            <i class="fas fa-star"></i>
                            <% } %>
                        </div>
                    </div>
                </header>    
                    <p class="user-review-text">
                        <%=review.dataValues.review_description%>
                    </p>
            </div>
        <% }) %>
    </div>    
</section>
